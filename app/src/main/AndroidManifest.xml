<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.algog.homalia">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_homalia"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".act.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".act.LoginActivity" />
        <activity android:name=".act.RegistrarseActivity" />
        <activity android:name=".act.MainActivity" />
        <activity android:name=".act.CreateOrJoinHomeActivity" />
        <activity android:name=".act.FlatMatesActivity" />
        <activity android:name=".act.TasksActivity" />
        <activity android:name=".act.ShoppingListActivity" />
        <activity android:name=".act.NotesActivity" />
        <activity android:name=".act.ExpensesActivity" />
        <activity android:name=".act.CreateNoteActivity" />
        <activity android:name=".act.CreateProductActivity" />
        <activity android:name=".act.RecoverPasswordActivity" />
        <activity android:name=".act.IndividualServiceActivity" />
        <activity android:name=".act.InvoicesActivity" />
        <activity android:name=".act.ContractInformationActivity" />
        <activity android:name=".act.CreateInvoiceActivity" />
        <activity android:name=".act.EditPersonalDataActivity"></activity>
    </application>

</manifest>